<Prefab>
  <Window>
    <BrushWidget HeightSizePolicy="StretchToParent" WidthSizePolicy="StretchToParent" Brush="Encyclopedia.SoundBrush"
                 Sprite="BlankWhiteSquare_9" Brush.Color="#000000DD">
      <Children>
        <BrushWidget HeightSizePolicy="Fixed" WidthSizePolicy="Fixed" SuggestedHeight="1000" SuggestedWidth="1600"
                     HorizontalAlignment="Center" VerticalAlignment="Top" MarginTop="20" Brush="Encyclopedia.Frame">
          <Children>
            <ClassicOptionsScreenWidget Id="Options" WidthSizePolicy="StretchToParent"
                                        HeightSizePolicy="StretchToParent"
                                        CurrentOptionDescriptionWidget="ScrollablePanel\DescriptionsRightPanel\DescriptionsListPanel\CurrentOptionDescriptionWidget"
                                        CurrentOptionImageWidget="ScrollablePanel\DescriptionsRightPanel\DescriptionsListPanel\CurrentOptionImageWidget"
                                        CurrentOptionNameWidget="ScrollablePanel\DescriptionsRightPanel\DescriptionsListPanel\CurrentOptionNameWidget">
              <Children>
                <ScrollablePanel Id="ScrollablePanel" WidthSizePolicy="StretchToParent"
                                 HeightSizePolicy="StretchToParent" HorizontalAlignment="Center"
                                 VerticalAlignment="Center" AutoHideScrollBarHandle="true" AutoHideScrollBars="false"
                                 ClipRect="TabRectangle" InnerPanel="TabRectangle\TabControl"
                                 VerticalScrollbar="..\VerticalScrollbar">
                  <Children>
                    <BrushWidget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="150"
                                 SuggestedWidth="800"
                                 PositionYOffset="-5" HorizontalAlignment="Center" Sprite="StdAssets\tabbar_popup"
                                 DoNotAcceptEvents="true">
                      <Children>
                        <RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
                                        VerticalAlignment="Center"
                                        PositionYOffset="-27" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
                                        Text="Party Screen Enhancements Settings" Brush.FontSize="30" />
                      </Children>
                    </BrushWidget>

                    <!--TabControl-->
                    <BrushWidget Id="TabRectangle" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
                                 ClipContents="true">
                      <Children>
                        <TabControl Id="TabControl" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren"
                                    VerticalAlignment="Center" HorizontalAlignment="Center">
                          <Children>
                            <PSESortingSelectorLayer Id="SorterSettingsPage" DataSource="{SorterPane}" />
                            <PartyEnhancementGeneralTab Id="GeneralSettingsPage" DataSource="{GeneralPane}" />
                            <PSEMiscTab Id="MiscellaneousSettingsPage" DataSource="{MiscPane}" />
                          </Children>
                        </TabControl>
                      </Children>
                    </BrushWidget>

                    <!--Tabs themselves-->
                    <ListPanel WidthSizePolicy="CoverChildren" HeightSizePolicy="Fixed" SuggestedHeight="128"
                               MarginTop="60" MarginLeft="20" HorizontalAlignment="Left" VerticalAlignment="Top"
                               LayoutImp.LayoutMethod="HorizontalLeftToRight">
                      <Children>
                        <PSESettingsTabToggle DataSource="{SorterPane}" Parameter.ButtonBrush="Header.Tab.Left"
                                              Parameter.TabName="SorterSettingsPage" />
                        <PSESettingsTabToggle DataSource="{GeneralPane}" Parameter.ButtonBrush="Header.Tab.Center"
                                              Parameter.TabName="GeneralSettingsPage" />
                        <PSESettingsTabToggle DataSource="{MiscPane}" Parameter.ButtonBrush="Header.Tab.Right"
                                              Parameter.TabName="MiscellaneousSettingsPage" />
                      </Children>
                    </ListPanel>

                    <Widget Id="DescriptionsRightPanel" MarginTop="110" MarginRight="40" WidthSizePolicy="Fixed"
                            HeightSizePolicy="StretchToParent" VerticalAlignment="Center" SuggestedWidth="650"
                            HorizontalAlignment="Right" DoNotAcceptEvents="true" DoNotPassEventsToChildren="true">
                      <Children>

                        <ListPanel Id="DescriptionsListPanel" WidthSizePolicy="StretchToParent"
                                   HeightSizePolicy="CoverChildren" MarginLeft="40" MarginTop="100"
                                   LayoutImp.LayoutMethod="VerticalBottomToTop">
                          <Children>
                            <RichTextWidget Id="CurrentOptionNameWidget" WidthSizePolicy="StretchToParent"
                                            HeightSizePolicy="CoverChildren" Brush="SPOptions.Description.Title.Text"
                                            Text=" " />
                            <RichTextWidget Id="CurrentOptionDescriptionWidget" WidthSizePolicy="StretchToParent"
                                            HeightSizePolicy="CoverChildren" MarginTop="25"
                                            Brush="SPOptions.Description.Text" Text=" " />
                            <Widget Id="CurrentOptionImageWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                                    SuggestedWidth="576" SuggestedHeight="324" MarginTop="35" />
                          </Children>
                        </ListPanel>

                      </Children>
                    </Widget>

                    <Widget Id="DescriptionsRightPanel" MarginTop="110" MarginRight="40" WidthSizePolicy="Fixed"
                            HeightSizePolicy="StretchToParent" VerticalAlignment="Center" SuggestedWidth="650"
                            HorizontalAlignment="Right" DoNotAcceptEvents="true" DoNotPassEventsToChildren="true">
                      <Children>

                        <ListPanel Id="DescriptionsListPanel" WidthSizePolicy="StretchToParent"
                                   HeightSizePolicy="CoverChildren" MarginLeft="40" MarginTop="65"
                                   LayoutImp.LayoutMethod="VerticalBottomToTop">
                          <Children>
                            <RichTextWidget Id="CurrentOptionNameWidget" WidthSizePolicy="StretchToParent"
                                            HeightSizePolicy="CoverChildren" Brush="SPOptions.Description.Title.Text"
                                            Text=" " />
                            <RichTextWidget Id="CurrentOptionDescriptionWidget" WidthSizePolicy="StretchToParent"
                                            HeightSizePolicy="CoverChildren" MarginTop="25"
                                            Brush="SPOptions.Description.Text" Text=" " />
                            <Widget Id="CurrentOptionImageWidget" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                                    SuggestedWidth="576" SuggestedHeight="324" MarginTop="35" />
                          </Children>
                        </ListPanel>
                      </Children>
                    </Widget>

                    <BrushWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="Fixed" SuggestedHeight="150"
                                 VerticalAlignment="Bottom" Sprite="StdAssets\Popup\scrollable_field_gradient"
                                 IsEnabled="false" />

                    <!--End TabControl-->

                    <ButtonWidget Command.Click="ExecuteCloseSettings" HeightSizePolicy="Fixed" WidthSizePolicy="Fixed"
                                  SuggestedHeight="50" SuggestedWidth="50" VerticalAlignment="Top"
                                  HorizontalAlignment="Center" MarginTop="20" MarginLeft="1500"
                                  Brush="Popup.CloseButton" />

                  </Children>
                </ScrollablePanel>

                <ScrollbarWidget Id="VerticalScrollbar" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
                                 SuggestedWidth="8" HorizontalAlignment="Right" VerticalAlignment="Center"
                                 MarginTop="26" MarginBottom="85" AlignmentAxis="Vertical"
                                 Handle="VerticalScrollbarHandle" MaxValue="100" MinValue="0">
                  <Children>
                    <Widget WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent" SuggestedWidth="4"
                            HorizontalAlignment="Center" Sprite="MPLobby\CustomServer\lobby_slider_bed"
                            AlphaFactor="0.4" />
                    <ImageWidget Id="VerticalScrollbarHandle" WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
                                 SuggestedWidth="8" SuggestedHeight="10" HorizontalAlignment="Center"
                                 Brush="FaceGen.Scrollbar.Handle" />
                  </Children>
                </ScrollbarWidget>

              </Children>
            </ClassicOptionsScreenWidget>
          </Children>
        </BrushWidget>
      </Children>
    </BrushWidget>
  </Window>
</Prefab>