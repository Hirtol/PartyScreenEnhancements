                      CommandParameter.AlternateClick="1">
          <Children>
            <HintWidget DataSource="{UpgradeHint}" WidthSizePolicy="StretchToParent"
                        HeightSizePolicy="StretchToParent"
                        Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
