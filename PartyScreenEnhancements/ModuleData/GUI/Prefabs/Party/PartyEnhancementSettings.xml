<Prefab>
	<Constants />
	<Variables />
	<Window>
		<Widget HeightSizePolicy="StretchToParent" WidthSizePolicy="StretchToParent" Brush="Encyclopedia.SoundBrush"
		        Sprite="BlankWhiteSquare_9" Brush.Color="#000000DD">
			<Children>
				<Widget HeightSizePolicy="Fixed" WidthSizePolicy="Fixed" SuggestedHeight="1000" SuggestedWidth="1600"
				        HorizontalAlignment="Center" VerticalAlignment="Top" MarginTop="20" Brush="Encyclopedia.Frame">
					<Children>

						<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="150" SuggestedWidth="800"
										PositionYOffset="-5" HorizontalAlignment="Center" Sprite="StdAssets\tabbar_popup"
										DoNotAcceptEvents="true">
							<Children>
								<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
												PositionYOffset="-27" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
												Text="Party Enhancement Settings" Brush.FontSize="40" />
							</Children>
						</Widget>
						<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="150" SuggestedWidth="300"
										PositionYOffset="0" HorizontalAlignment="Center" VerticalAlignment="Center" DoNotAcceptEvents="true">
							<Children>
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
														PositionYOffset="-80" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
														Text="Drag and drop the sorters you want from the left to the right in order to use them." Brush.FontSize="20" />
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
								PositionYOffset="-20" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
								Text="Click the green/orange arrow to change between ascending and descending order." Brush.FontSize="20" />
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
								PositionYOffset="40" PositionXOffset="0" Brush="Recruitment.Popup.Title.Text"
								Text="The Active Sorters will be used Top to Bottom" Brush.FontSize="20" />
								<TextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
								PositionYOffset="80" PositionXOffset="0" Brush="Recruitment.Popup.Title.Text"
								Text="For information about each sorter hover over the exclamation mark" Brush.FontSize="20" />
							</Children>
						</Widget>
						<Widget Id="PossibleSettingsList" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
								SuggestedWidth="500" HorizontalAlignment="Left" VerticalAlignment="Center"
								PositionXOffset="50" MarginTop="200" MarginBottom="100"
								Brush="Frame1.Broken.Left" isVisible="true" isEnabled="true">
							<Children>
								<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="150" SuggestedWidth="576"
										PositionYOffset="-17" HorizontalAlignment="Center" Sprite="StdAssets\tabbar_popup"
										DoNotAcceptEvents="true">
									<Children>
										<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
														PositionYOffset="-27" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
														Text="Available Sorters" Brush.FontSize="40" />
									</Children>
								</Widget>
								<Widget Id="EnhancementSettingsList" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren">
									<Children>
										<ListPanel Id="List" DataSource="{PossibleSettingList}" WidthSizePolicy="StretchToParent"
												   HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Top"
												   AcceptDrop="true" Command.Drop="..\ExecuteListTransfer" CommandParameter.Drop="PossibleSettingList"
												   LayoutImp.LayoutMethod="VerticalBottomToTop" MarginTop="100">
											<ItemTemplate>
												<SettingSort ButtonType="Radio">
												</SettingSort>
											</ItemTemplate>
										</ListPanel>
									</Children>
								</Widget>
							</Children>
						</Widget>

						<Widget Id="ExistingSettingsList" WidthSizePolicy="Fixed" HeightSizePolicy="StretchToParent"
								SuggestedWidth="500" HorizontalAlignment="Right" VerticalAlignment="Center"
								PositionXOffset="-50" MarginTop="200" MarginBottom="100"
								Brush="Frame1.Broken.Right">
							<Children>
								<Widget WidthSizePolicy="Fixed" HeightSizePolicy="Fixed" SuggestedHeight="150" SuggestedWidth="576"
										PositionYOffset="-17" HorizontalAlignment="Center" Sprite="StdAssets\tabbar_popup"
										DoNotAcceptEvents="true">
									<Children>
										<RichTextWidget WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren" VerticalAlignment="Center"
														PositionYOffset="-27" PositionXOffset="-8" Brush="Recruitment.Popup.Title.Text"
														Text="Active Sorters" Brush.FontSize="40" />
									</Children>
								</Widget>

								<Widget Id="EnhancementSettingsList" WidthSizePolicy="StretchToParent" HeightSizePolicy="CoverChildren">
									<Children>
										<ListPanel Id="List" DataSource="{SettingList}" WidthSizePolicy="StretchToParent"
												   HeightSizePolicy="StretchToParent" HorizontalAlignment="Center" VerticalAlignment="Top"
												   AcceptDrop="true" Command.Drop="..\ExecuteListTransfer" CommandParameter.Drop="SettingList"
												   LayoutImp.LayoutMethod="VerticalBottomToTop" MarginTop="100">
											<ItemTemplate>
												<SettingSortRight ButtonType="Radio">
												</SettingSortRight>
											</ItemTemplate>
										</ListPanel>
									</Children>
								</Widget>
							</Children>
						</Widget>
						<ButtonWidget Command.Click="ExecuteCloseSettings" HeightSizePolicy ="Fixed" WidthSizePolicy="Fixed" SuggestedHeight="50" SuggestedWidth="50" VerticalAlignment="Top" HorizontalAlignment="Center" MarginTop="20" MarginLeft="1500" Brush="Popup.CloseButton"/>
					</Children>
				</Widget>
			</Children>
		</Widget>
	</Window>
</Prefab>