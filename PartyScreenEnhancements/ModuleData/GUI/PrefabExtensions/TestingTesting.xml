<Widget WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent" DoNotAcceptEvents="true">
	<Children>
		<!--Upgrade Button 1-->
		<PartyUpgradeButtonWidget Id="UpgradeButton12" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed"
		                          HeightSizePolicy="Fixed" SuggestedWidth="40"
		                          SuggestedHeight="35" HorizontalAlignment="Right" VerticalAlignment="Top"
		                          MarginLeft="10" MarginRight="160" Command.AlternateClick="ExecuteUpgradeEncyclopediaLink"
		                          Command.Click="Upgrade" CommandParameter.AlternateClick="0" CommandParameter.Click="0"
		                          DefaultBrush="Party.UpgradeSlot.Button" ImageIdentifierWidget="ImageIdentifier"
		                          InsufficientBrush="Party.UpgradeSlot.ButtonInsufficient" IsAvailable="@IsUpgrade1Available"
		                          IsInsufficient="@IsUpgrade1Insufficient" IsVisible="@IsUpgrade1Exists"
		                          UnavailableBrush="Party.UpgradeSlot.ButtonUnavailable">
			<Children>
				<HintWidget DataSource="{Upgrade1Hint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
				            Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
				<ImageIdentifierWidget Id="ImageIdentifier" DataSource="{UpgradeTroop1}" WidthSizePolicy="StretchToParent"
				                       HeightSizePolicy="StretchToParent" MarginLeft="7" MarginRight="7" MarginTop="6"
				                       MarginBottom="8" AdditionalArgs="@AdditionalArgs" ImageId="@Id"
				                       ImageTypeCode="@ImageTypeCode" />
			</Children>
		</PartyUpgradeButtonWidget>

		<!--!Party.Slot.Height && !Party.Slot.Width-->

		<!--Upgrade Button 2-->
		<PartyUpgradeButtonWidget Id="UpgradeButton22" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed"
		                          HeightSizePolicy="Fixed" SuggestedWidth="40"
		                          SuggestedHeight="35" HorizontalAlignment="Right" VerticalAlignment="Top"
		                          MarginLeft="10" MarginRight="120" Command.AlternateClick="ExecuteUpgradeEncyclopediaLink"
		                          Command.Click="Upgrade" CommandParameter.AlternateClick="1" CommandParameter.Click="1"
		                          DefaultBrush="Party.UpgradeSlot.Button" ImageIdentifierWidget="ImageIdentifier"
		                          InsufficientBrush="Party.UpgradeSlot.ButtonInsufficient" IsAvailable="@IsUpgrade2Available"
		                          IsInsufficient="@IsUpgrade2Insufficient" IsVisible="@IsUpgrade2Exists"
		                          UnavailableBrush="Party.UpgradeSlot.ButtonUnavailable">
			<Children>
				<HintWidget DataSource="{Upgrade2Hint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
				            Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
				<ImageIdentifierWidget Id="ImageIdentifier" DataSource="{UpgradeTroop2}" WidthSizePolicy="StretchToParent"
				                       HeightSizePolicy="StretchToParent" MarginLeft="7" MarginRight="7" MarginTop="6"
				                       MarginBottom="8" AdditionalArgs="@AdditionalArgs" ImageId="@Id"
				                       ImageTypeCode="@ImageTypeCode" />
			</Children>
		</PartyUpgradeButtonWidget>

		<RadioButtonWidget Id="Upgrade1Locked" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed"
		              HeightSizePolicy="Fixed" SuggestedWidth="20"
		              SuggestedHeight="15" HorizontalAlignment="Right" VerticalAlignment="Bottom"
		              MarginLeft="10" MarginRight="170" Command.AlternateClick="ExecuteUpgradeEncyclopediaLink"
		              Command.Click="Upgrade" CommandParameter.AlternateClick="0" CommandParameter.Click="0"
		              Brush="Stages.Bar.Empty.Button" IsVisible="@IsUpgrade1Exists" EmptyBrush="Stages.Bar.Empty.Button" FullBrush="Stages.Bar.Full.Button" ButtonType="Toggle" UpgradePath="0" TroopId="@TroopID">
			<Children>
				<HintWidget DataSource="{Upgrade1Hint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
				            Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
			</Children>
		</RadioButtonWidget>

		<!--Party.Enhancement.RadioButton-->
		<!-- Make number 2 dependent on the other (reference via injection -> If it exists check if it is selected -> Deselect self if it is) -->

		<RadioButtonWidget Id="Upgrade2Locked" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed"
		                   HeightSizePolicy="Fixed" SuggestedWidth="20"
		                   SuggestedHeight="15" HorizontalAlignment="Right" VerticalAlignment="Bottom"
		                   MarginLeft="10" MarginRight="130" Command.AlternateClick="ExecuteUpgradeEncyclopediaLink"
		                   Command.Click="Upgrade" CommandParameter.AlternateClick="1" CommandParameter.Click="1"
		                   Brush="Stages.Bar.Empty.Button" IsVisible="@IsUpgrade2Exists" EmptyBrush="Stages.Bar.Empty.Button" FullBrush="Stages.Bar.Full.Button" ButtonType="Toggle" UpgradePath="1" TroopId="@TroopID">
			<Children>
				<HintWidget DataSource="{Upgrade2Hint}" WidthSizePolicy="StretchToParent" HeightSizePolicy="StretchToParent"
				            Command.HoverBegin="ExecuteBeginHint" Command.HoverEnd="ExecuteEndHint" />
			</Children>
		</RadioButtonWidget>
	</Children>
</Widget>